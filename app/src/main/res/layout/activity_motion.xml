<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#214C0A"
    app:layoutDescription="@xml/activity_motion_scene"
    tools:context=".MainActivity">



    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="410dp"
        android:layout_height="240dp"

        android:src="@drawable/taco1" />

    <TextView
        android:id="@+id/textView3de"
        android:layout_width="310dp"
        android:layout_height="146dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-106dp"
        android:text="Desliza para continuar"
        android:fontFamily="@font/dragonslapper"
        android:textAlignment="center"
        android:textColor="#F4F3F3"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewSistemas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView2"
        android:layout_width="410dp"
        android:layout_height="735dp"

        android:src="@drawable/taco3"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView3"
        android:layout_width="410dp"
        android:layout_height="1230dp"

        android:src="@drawable/taco2" />

    <ImageView
        android:id="@+id/ivcierre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/plato"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/ivgancho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/taco"
        tools:layout_editor_absoluteX="331dp"
        tools:layout_editor_absoluteY="610dp" />
</androidx.constraintlayout.motion.widget.MotionLayout>