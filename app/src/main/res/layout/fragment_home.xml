<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home.homeFragment"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView3"
            android:layout_width="2400dp"
            android:layout_height="1400dp"
            android:src="@drawable/portal"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="2400dp"
            android:layout_height="1400dp"
            android:src="@drawable/negro"
            android:alpha="0.75"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/textHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userProfileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



        <!-- Foto de perfil del usuario -->
        <ImageView
            android:id="@+id/userProfileImage"
            android:layout_width="350dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:src="@drawable/restaurant" />

        <!-- Datos del usuario -->
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/userProfileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:text="Sobre Nuestro negocio"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="#F1F1F1"
            android:fontFamily="cursive"/>


        <!-- Descripción -->

        <!-- Espacio en blanco -->
        <TextView
            android:id="@+id/datosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Es un restaurante especializado en la venta de tacos, ofreciendo a sus clientes una experiencia culinaria única centrada en la preparación y presentación de este popular platillo mexicano. El establecimiento se destaca por la calidad de sus ingredientes frescos y auténticos, así como por su habilidad para combinar sabores y texturas para crear tacos deliciosos y variados."
            android:textAlignment="center"
            android:textColor="#F1F1F1"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/usernameTextView" />

        <Space
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/datosTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección de Hobbies -->
        <TextView
            android:id="@+id/hobbiesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/space1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="El Barril"
            android:textSize="60sp"
            android:textColor="#F1F1F1"
            android:fontFamily="cursive"/>

        <TextView
            android:id="@+id/hobbiesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hobbiesLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Busca convertirse en un destino favorito para los amantes de los tacos, ofreciendo no solo una deliciosa comida, sino también una experiencia gastronómica "
            android:textAlignment="center"
            android:textSize="23sp"
            android:textColor="#F1F1F1"/>

        <!-- Espacio en blanco -->
        <Space
            android:id="@+id/space2"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            app:layout_constraintTop_toBottomOf="@id/hobbiesText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección de Habilidades -->
        <TextView
            android:id="@+id/skillsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/space2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Tambien"
            android:textSize="40sp"
            android:textColor="#F1F1F1"
            android:fontFamily="cursive"/>

        <TextView
            android:id="@+id/skillsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/skillsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Crea un ambiente acogedor y festivo, brindando a los clientes una experiencia culinaria"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textColor="#F1F1F1"/>

        <Space
            android:id="@+id/space3"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            app:layout_constraintTop_toBottomOf="@id/hobbiesText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/elbarril"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:layout_marginTop="112dp"
            android:src="@drawable/elbarril"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/space3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

